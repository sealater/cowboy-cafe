<UserControl x:Class="PointOfSale.MenuItemSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style  TargetType="Button">
            <Setter Property="Height" Value="50px"></Setter>
            <Setter Property="FontSize" Value="18"></Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock TextAlignment="Center" FontSize="20">Entree</TextBlock>
            <Button Name="AddAngryChickenButton"  Tag="Angry Chicken" Click="OnItemAddButtonClicked">Angry Chicken</Button>
            <Button Name="AddCowpokeChiliButton" Tag="Cowpoke Chili" Click="OnItemAddButtonClicked">Cowpoke Chili</Button>
            <Button Name="AddDakotaDoubleButton" Tag="Dakota Double Burger" Click="OnItemAddButtonClicked">Dakota Double Burger</Button>
            <Button Name="AddPecosPulledPorkButton" Tag="Pecos Pulled Pork" Click="OnItemAddButtonClicked">Pecos Pulled Pork</Button>
            <Button Name="AddRustlersRibsButton" Tag="Rustlers Ribs" Click="OnItemAddButtonClicked">Rustler's Ribs</Button>
            <Button Name="AddTexasTripleBurgerButton" Tag="Texas Triple Burger" Click="OnItemAddButtonClicked">Texas Triple Burger</Button>
            <Button Name="AddTrailBurgerButton" Tag="Trail Burger" Click="OnItemAddButtonClicked">Trail Burger</Button>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock TextAlignment="Center" FontSize="20">Sides</TextBlock>
            <Button Name="AddBakedBeansButton" Tag="Baked Beans" Click="OnItemAddButtonClicked">Baked Beans</Button>
            <Button Name="AddChiliCheeseFriesButton" Tag="Chili Cheese Fries" Click="OnItemAddButtonClicked">Chili Cheese Fries</Button>
            <Button Name="AddCornDodgersButton" Tag="Corn Dodgers" Click="OnItemAddButtonClicked">Corn Dodgers</Button>
            <Button Name="AddPanDeCampoButton" Tag="Pan de Campo" Click="OnItemAddButtonClicked">Pan de Campo</Button>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <TextBlock TextAlignment="Center" FontSize="20">Drinks</TextBlock>
            <Button Name="AddCowboyCoffeeButton" Tag="Cowboy Coffee" Click="OnItemAddButtonClicked">Cowboy Coffee</Button>
            <Button Name="AddJerkedSodaButton" Tag="Jerked Soda" Click="OnItemAddButtonClicked">Jerked Soda</Button>
            <Button Name="AddTexasTeaButton" Tag="Texas Tea" Click="OnItemAddButtonClicked">Texas Tea</Button>
            <Button Name="AddWaterButton" Tag="Water" Click="OnItemAddButtonClicked">Water</Button>
        </StackPanel>
    </Grid>
</UserControl>
